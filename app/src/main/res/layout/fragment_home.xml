<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="776dp"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="414dp"
            android:layout_height="349dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logowithcirlce"
            tools:layout_editor_absoluteX="-2dp" />



        <Button
            android:id="@+id/personaldetails"
            android:layout_width="282dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/lavender_border"
            android:text="Personal Details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rentit" />

        <Button
            android:id="@+id/rentit"
            android:layout_width="282dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/lavender_border"
            android:text="Rent It out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/parkingspot"
            android:layout_width="282dp"
            android:layout_height="47dp"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="28dp"
            android:text="Find A Spot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personaldetails" />


        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/lavender_border"
            android:text="Sign Out"
            app:layout_constraintTop_toBottomOf="@+id/parkingspot"
            tools:layout_editor_absoluteX="154dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>