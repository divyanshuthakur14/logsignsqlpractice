<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".rentit">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="474dp"
        android:layout_height="900dp"
        app:srcCompat="@drawable/logowithcirlce"
        tools:layout_editor_absoluteX="-41dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/titleTextView1"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="16dp"
        android:text="Space Details"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:layout_editor_absoluteX="-16dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/lavender_border"
        android:hint="Enter Address"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/lavender_border"
        android:hint="Enter Size Of Space"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/vehiclepreference"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="304dp"
        android:background="@drawable/lavender_border"
        android:hint="Two/Four Vehicle Preference"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText

        android:id="@+id/dates"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="392dp"
        android:background="@drawable/lavender_border"
        android:hint="Enter Duration Of Availability"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds"
        tools:layout_editor_absoluteX="0dp" />

    <EditText

        android:id="@+id/timingofavail"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/lavender_border"
        android:hint="Enter Daily Timing"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="576dp"
        android:background="@drawable/lavender_border"
        android:hint="Amount"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="656dp"
        android:layout_marginEnd="176dp"
        android:padding="12dp"
        android:text="Share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>